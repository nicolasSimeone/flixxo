<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:id="@+id/first_step_layout"
        android:background="@color/onBoardColor"
        android:layout_height="match_parent">

    <TextView android:layout_width="0dp"
              android:fontFamily="@font/montserrat_regular"
              android:textSize="20sp"
              android:text="@string/welcome"
              android:textColor="@color/welcome"
              android:id="@+id/textView3"
              android:layout_height="25dp"
              app:layout_constraintEnd_toEndOf="parent"
              android:layout_marginEnd="16dp"
              app:layout_constraintStart_toStartOf="parent"
              android:layout_marginStart="16dp"
              android:layout_marginTop="8dp"
              app:layout_constraintTop_toTopOf="parent"
              android:layout_marginBottom="4dp"
              app:layout_constraintBottom_toTopOf="@+id/textView"
              app:layout_constraintVertical_chainStyle="spread"/>

    <TextView
            android:layout_width="0dp"
            android:textSize="27sp"
            android:textColor="@android:color/white"
            android:text="@string/we_want_to_learn_more_from_you"
            android:fontFamily="@font/montserrat_bold"
            android:layout_height="wrap_content"
            android:id="@+id/textView"
            app:layout_constraintTop_toBottomOf="@+id/textView3" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/name" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" android:layout_marginTop="4dp"/>

    <EditText
            android:id="@+id/name"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:fontFamily="@font/montserrat_regular"
            android:textSize="13sp"
            android:textColor="@android:color/white"
            android:textColorHint="@android:color/white"
            android:focusable="true"
            android:maxLines="1"
            android:inputType="text"
            android:hint="@string/name_user"
            android:padding="6dp"
            android:background="@drawable/shape_edit_text_onboarding"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView" app:layout_constraintBottom_toTopOf="@+id/language"
            android:layout_marginBottom="8dp"/>

    <Spinner
            android:id="@+id/language"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:spinnerMode="dropdown"
            android:padding="6dp"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:fontFamily="@font/montserrat_regular"
            android:textSize="13sp"
            android:popupBackground="@color/hintOnBoard"
            android:popupElevation="0dp"
            android:background="@drawable/background_spinner"
            android:hint="@string/language"
            android:maxLines="1"
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@+id/name"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/country"
            android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="16dp"
            app:layout_constraintStart_toStartOf="parent"/>

    <Spinner
            android:id="@+id/country"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:padding="6dp"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:fontFamily="@font/montserrat_regular"
            android:textSize="13sp"
            android:maxLines="1"
            android:popupBackground="@color/hintOnBoard"
            android:inputType="text"
            android:textColor="@android:color/white"
            android:textColorHint="@android:color/white"
            android:background="@drawable/background_spinner"
            android:hint="@string/country_of_residence"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@+id/language" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/gender_linear"/>

    <LinearLayout android:layout_width="0dp"
                  android:layout_height="45dp"
                  android:id="@+id/gender_linear"
                  app:layout_constraintEnd_toEndOf="parent"
                  app:layout_constraintStart_toStartOf="parent"
                  android:layout_marginTop="4dp" app:layout_constraintTop_toBottomOf="@+id/country"
                  android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/textView2">


        <Button
                android:id="@+id/female"
                android:layout_width="0dp"
                android:layout_weight="10"
                android:layout_height="wrap_content"
                android:layout_marginStart="19dp"
                android:padding="12dp"
                android:fontFamily="@font/montserrat_regular"
                android:textSize="13sp"
                android:text="@string/female"
                android:textAllCaps="false"
                android:textAlignment="center"
                android:textColor="@android:color/white"
                android:textColorHint="@android:color/white"
                android:background="@drawable/button_step_background"/>

        <Button
                android:id="@+id/male"
                android:layout_width="0dp"
                android:layout_weight="10"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:layout_marginStart="19dp"
                android:fontFamily="@font/montserrat_regular"
                android:textSize="13sp"
                android:text="@string/male"
                android:textAllCaps="false"
                android:textAlignment="center"
                android:textColor="@android:color/white"
                android:textColorHint="@android:color/white"
                android:background="@drawable/shape_edit_text_onboarding"/>

        <Button
                android:id="@+id/other"
                android:layout_width="0dp"
                android:layout_weight="10"
                android:layout_height="wrap_content"
                android:layout_marginStart="19dp"
                android:layout_marginEnd="19dp"
                android:padding="12dp"
                android:fontFamily="@font/montserrat_regular"
                android:textSize="13sp"
                android:textAlignment="center"
                android:text="@string/other"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:textColorHint="@android:color/white"
                android:background="@drawable/shape_edit_text_onboarding"/>

    </LinearLayout>

    <TextView android:layout_width="0dp"
              android:fontFamily="@font/montserrat_regular"
              android:textColor="@android:color/white"
              android:text="@string/date_of_birth"
              android:layout_height="wrap_content"
              android:textSize="13sp"
              android:id="@+id/textView2"
              app:layout_constraintEnd_toEndOf="parent"
              android:layout_marginEnd="10dp"
              app:layout_constraintStart_toStartOf="parent"
              android:layout_marginStart="23dp"
              android:layout_marginTop="4dp"
              app:layout_constraintTop_toBottomOf="@+id/gender_linear"
              android:layout_marginBottom="8dp"
              app:layout_constraintBottom_toTopOf="@+id/birth_date"/>

    <TextView
            android:id="@+id/birth_date"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/background_spinner"
            android:layout_marginBottom="8dp"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:paddingTop="10dp"
            android:textColor="@android:color/white"
            android:maxLines="1"
            android:fontFamily="@font/montserrat_regular"
            android:textSize="13sp"
            app:layout_constraintBottom_toTopOf="@+id/gender_linear"
            app:layout_constraintTop_toBottomOf="@+id/textView2"
            android:layout_marginTop="5dp"
            android:layout_marginStart="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginEnd="20dp"/>

    <Button
            android:id="@+id/continue_step1"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="@string/continue_onBoard"
            android:fontFamily="@font/montserrat_bold"
            style="@style/button_style"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/birth_date"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="20dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="20dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>