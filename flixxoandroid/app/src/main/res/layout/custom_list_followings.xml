<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="50dp">

    <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/avatar_follow"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_profile_user"
            android:alpha="0.5"
            android:layout_marginStart="20dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginBottom="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toTopOf="parent"/>

    <TextView
            android:id="@+id/user_follow"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:fontFamily="@font/montserrat_regular"
            app:layout_constraintStart_toEndOf="@+id/avatar_follow"
            android:layout_marginStart="15dp"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toStartOf="@+id/button_follow"/>

    <Button
            android:text="@string/following_button"
            android:layout_width="85dp"
            android:layout_height="25dp"
            android:background="@drawable/flixxo_coin_carrousel"
            android:textColor="@android:color/white"
            android:fontFamily="@font/montserrat_regular"
            android:textSize="12sp"
            android:id="@+id/button_following"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:textAllCaps="false"
            android:textAlignment="center"/>

    <Button
            android:text="@string/follow_button"
            android:layout_width="85dp"
            android:layout_height="25dp"
            android:visibility="invisible"
            android:background="@drawable/button_login"
            android:textColor="@android:color/white"
            android:fontFamily="@font/montserrat_regular"
            android:textSize="12sp"
            android:id="@+id/button_follow"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:textAllCaps="false"
            android:textAlignment="center"/>


</androidx.constraintlayout.widget.ConstraintLayout>