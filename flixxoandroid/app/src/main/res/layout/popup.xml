<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:background="@color/modalColor"
                android:layout_height="match_parent">

    <TextView android:layout_width="45dp"
              android:layout_alignParentEnd="true"
              android:id="@+id/close_popup"
              android:textColor="@android:color/white"
              android:textStyle="bold"
              android:gravity="center"
              android:textSize="20sp"
              android:text="X"
              android:layout_height="45dp"/>

    <LinearLayout android:layout_width="match_parent"
                  android:orientation="vertical"
                  android:padding="20dp"
                  android:layout_centerInParent="true"
                  android:layout_height="wrap_content">

        <ImageView android:layout_width="130dp"
                   android:layout_height="130dp"
                   android:layout_gravity="center"
                   android:id="@+id/imageName"
                   android:src="@drawable/ic_smiley_face"/>

        <TextView android:layout_width="wrap_content"
                  android:layout_marginTop="20dp"
                  android:textAlignment="center"
                  android:textSize="16sp"
                  android:id="@+id/message"
                  android:layout_marginStart="10dp"
                  android:layout_marginEnd="10dp"
                  android:textColor="@android:color/white"
                  android:text="For this video you will be charged 0.18 flixx"
                  android:layout_gravity="center_horizontal"
                  android:fontFamily="@font/montserrat_regular"
                  android:layout_height="wrap_content"/>

        <Button android:layout_width="240dp"
                android:fontFamily="@font/montserrat_semibold"
                android:layout_height="45dp"
                android:id="@+id/continue_button"
                android:textColor="@android:color/white"
                android:layout_marginTop="15dp"
                android:layout_gravity="center"/>

        <Button android:layout_width="240dp"
                android:layout_height="45dp"
                android:fontFamily="@font/montserrat_semibold"
                android:id="@+id/cancel_button"
                android:textColor="@android:color/white"
                android:layout_marginTop="15dp"
                android:layout_gravity="center"/>

    </LinearLayout>

</RelativeLayout>
