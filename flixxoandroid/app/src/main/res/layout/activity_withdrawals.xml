<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/flixxoBackgorundColor"
        tools:context="com.flixxo.apps.flixxoapp.view.WithdrawalsActivity">

    <LinearLayout
            android:id="@+id/attention"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:layout_marginTop="25dp"
            android:background="@drawable/shape_followers"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="20dp"
            android:padding="15dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="20dp">

        <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">

            <ImageView
                    android:id="@+id/icon_warning"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="7dp"
                    android:src="@drawable/ic_attention_icon"/>

            <TextView
                    android:id="@+id/text_attention"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/attention"
                    android:fontFamily="@font/montserrat_semibold"
                    android:textColor="@color/attention"
                    android:textSize="16sp"/>
        </LinearLayout>

        <TextView
                android:id="@+id/with_disabled"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/temporarily_disabled"
                android:textSize="14sp"
                android:fontFamily="@font/montserrat_regular"
                android:textColor="@android:color/white"/>

    </LinearLayout>

    <View
            android:foregroundGravity="center"
            android:layout_width="match_parent"
            android:background="@color/followers"
            android:layout_height="1dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="20dp"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintTop_toBottomOf="@+id/attention"
            android:layout_marginTop="20dp"
            android:id="@+id/view">
    </View>

    <TextView
            android:id="@+id/debit_card"
            android:text="@string/debit_card"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:fontFamily="@font/montserrat_semibold"
            android:textSize="16sp"
            android:layout_marginTop="25dp"
            app:layout_constraintTop_toBottomOf="@+id/view"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="20dp"/>

    <TextView
            android:id="@+id/you_will_have"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/you_will_have"
            android:textSize="14sp"
            android:textColor="@android:color/white"
            android:fontFamily="@font/montserrat_regular"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/debit_card"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="20dp"/>

    <ImageView
            android:id="@+id/image_wallet"
            android:src="@mipmap/card_2"
            android:layout_width="0dp"
            android:layout_height="214dp"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@+id/you_will_have"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="20dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
