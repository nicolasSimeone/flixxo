<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:background="@color/flixxoBackgorundColor"
        android:layout_height="match_parent"
        tools:context="com.flixxo.apps.flixxoapp.view.EditProfileFragment">

    <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/avatar_edit"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/avatar_image"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="50dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="15dp"/>

    <TextView
            android:id="@+id/enter_info"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@android:color/white"
            android:text="@string/enter_your_info"
            android:fontFamily="@font/montserrat_regular"
            app:layout_constraintStart_toEndOf="@+id/avatar_edit"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toTopOf="parent"/>

    <TextView
            android:id="@+id/change_photo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/change_photo"
            android:textColor="@color/macaroniAndCheese"
            android:fontFamily="@font/montserrat_semibold"
            android:textSize="14sp"
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toBottomOf="@+id/enter_info"
            android:layout_marginEnd="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/avatar_edit"
            android:layout_marginStart="15dp"/>

    <View
            android:id="@+id/line_view"
            android:foregroundGravity="center"
            android:layout_width="match_parent"
            android:background="@color/followers"
            android:layout_height="1dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="22dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="20dp"
            app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/change_photo">
    </View>

    <EditText
            android:id="@+id/name_edit"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/edit_text_background"
            android:backgroundTint="@color/flixxoAppColor"
            android:fontFamily="@font/montserrat_regular"
            android:hint="@string/name_user"
            android:maxLines="1"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:singleLine="true"
            android:textColor="@android:color/white"
            android:textColorHint="@android:color/white"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/line_view" />

    <Spinner
            android:id="@+id/lang_edit"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:spinnerMode="dropdown"
            android:maxLines="1"
            android:popupBackground="@drawable/spinner_popup"
            android:fontFamily="@font/montserrat_regular"
            android:textSize="14sp"
            android:background="@drawable/background_spinner_editprofile"
            android:layout_marginTop="15dp"
            android:popupElevation="0dp"
            app:layout_constraintTop_toBottomOf="@+id/name_edit"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="20dp"
            android:paddingTop="7dp"
            app:layout_constraintHorizontal_bias="1.0">

    </Spinner>
    <Spinner
            android:id="@+id/country_edit"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:spinnerMode="dropdown"
            android:maxLines="1"
            android:popupBackground="@drawable/spinner_popup"
            android:fontFamily="@font/montserrat_regular"
            android:textSize="14sp"
            android:background="@drawable/background_spinner_editprofile"
            android:layout_marginTop="15dp"
            android:popupElevation="0dp"
            app:layout_constraintTop_toBottomOf="@+id/lang_edit"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="20dp"
            android:paddingTop="7dp"
            app:layout_constraintHorizontal_bias="1.0">
    </Spinner>

    <LinearLayout android:layout_width="0dp"
                  android:layout_height="45dp"
                  android:id="@+id/gender_linear"
                  app:layout_constraintEnd_toEndOf="parent"
                  app:layout_constraintStart_toStartOf="parent"
                  android:layout_marginTop="15dp"
                  android:layout_marginStart="20dp"
                  android:layout_marginEnd="20dp"
                  app:layout_constraintTop_toBottomOf="@+id/country_edit"
                  android:layout_marginBottom="10dp"
                  app:layout_constraintBottom_toTopOf="@+id/date_of_birth">

        <Button
                android:id="@+id/female_edit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:layout_weight="10"
                android:background="@drawable/edit_text_background"
                android:fontFamily="@font/montserrat_regular"
                android:padding="12dp"
                android:text="@string/female"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:textColorHint="@android:color/white"
                android:textSize="14sp" />

        <Button
                android:id="@+id/male_edit"
                android:layout_width="0dp"
                android:layout_weight="10"
                android:layout_height="wrap_content"
                android:padding="12dp"
                android:fontFamily="@font/montserrat_regular"
                android:textSize="14sp"
                android:text="@string/male"
                android:textAllCaps="false"
                android:textAlignment="center"
                android:textColor="@android:color/white"
                android:textColorHint="@android:color/white"
                android:background="@drawable/button_step_background"/>

        <Button
                android:id="@+id/other_edit"
                android:layout_width="0dp"
                android:layout_weight="10"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:padding="12dp"
                android:fontFamily="@font/montserrat_regular"
                android:textSize="14sp"
                android:textAlignment="center"
                android:text="@string/other"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:textColorHint="@android:color/white"
                android:background="@drawable/edit_text_background"/>

    </LinearLayout>

    <TextView
            android:id="@+id/date_of_birth"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/date_of_birth"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:fontFamily="@font/montserrat_regular"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/gender_linear"
            android:layout_marginEnd="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="20dp"
            app:layout_constraintStart_toStartOf="parent"/>

    <TextView
            android:id="@+id/birth_date"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/background_spinner_editprofile"
            android:fontFamily="@font/montserrat_regular"
            android:maxLines="1"
            android:paddingStart="15dp"
            android:paddingTop="12dp"
            android:paddingEnd="15dp"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/date_of_birth" />


    <Button
            android:id="@+id/submit_edit"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:text="@string/submitProfile"
            android:textSize="15sp"
            android:fontFamily="@font/montserrat_bold"
            style="@style/button_style"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@+id/birth_date"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="20dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="20dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
