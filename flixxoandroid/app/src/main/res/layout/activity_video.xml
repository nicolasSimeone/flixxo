<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.flixxo.apps.flixxoapp.view.VideoActivity">

    <VideoView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/videoview"/>

    <ImageView android:layout_width="24dp"
               android:background="@drawable/ic_close_circle"
               android:layout_height="24dp"
               android:elevation="5dp"
               android:visibility="invisible"
               android:id="@+id/close_video" android:layout_marginTop="16dp"
               app:layout_constraintTop_toTopOf="parent" android:layout_marginStart="16dp"
               app:layout_constraintStart_toStartOf="parent"/>

    <ProgressBar
            android:layout_width="wrap_content"
            android:id="@+id/progressbar"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_height="wrap_content"
            app:layout_constraintHorizontal_bias="0.498" app:layout_constraintVertical_bias="0.504"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="@+id/videoview"/>

</androidx.constraintlayout.widget.ConstraintLayout>

